<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nagainfomob.app.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="left|top">

            <TextView
                android:id="@+id/titleLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_threeD_visualizer"
                android:textSize="16sp"
                android:textColor="@color/textColorBright"
                android:layout_alignParentTop="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="8.25"
            android:background="@drawable/dmd_layout_section_bg" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:padding="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/LayoutLeft"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textColorHint="@color/textColor"
                                android:theme="@style/TextLabel">
                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/project_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textCapWords"
                                    android:hint="@string/project_name"
                                    android:textSize="14sp"
                                    android:imeOptions="actionDone"
                                    android:textColor="@color/textColorBright"
                                    android:maxLength="75"/>
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:textColorHint="@color/textColor"
                                android:theme="@style/TextLabel">
                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/customer_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textCapWords"
                                    android:hint="@string/customer_name"
                                    android:textSize="14sp"
                                    android:imeOptions="actionDone"
                                    android:textColor="@color/textColorBright"
                                    android:maxLength="75"/>
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:textColorHint="@color/textColor"
                                android:theme="@style/TextLabel">
                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/customer_no"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:hint="@string/customer_no"
                                    android:textSize="14sp"
                                    android:imeOptions="actionDone"
                                    android:textColor="@color/textColorBright"
                                    android:maxLength="15"/>
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:textColorHint="@color/textColor"
                                android:theme="@style/TextLabel">
                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/customer_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textEmailAddress"
                                    android:hint="@string/customer_email"
                                    android:textSize="14sp"
                                    android:imeOptions="actionDone"
                                    android:textColor="@color/textColorBright"
                                    android:maxLength="75"/>
                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:background="@drawable/vertical_divider"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"></View>

                <LinearLayout
                    android:id="@+id/LayoutRight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/CountryView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:background="?android:attr/selectableItemBackground"
                                android:gravity="top|left">
                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/CountryLay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textColorHint="@color/textColor"
                                    android:theme="@style/TextLabel">
                                    <android.support.v7.widget.AppCompatEditText
                                        android:id="@+id/input_company_unit"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textCapWords"
                                        android:hint="@string/unit"
                                        android:textSize="14sp"
                                        android:focusable="true"
                                        android:textColor="@color/textColorBright"
                                        android:maxLength="75"/>
                                </android.support.design.widget.TextInputLayout>

                                <android.widget.ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignRight="@+id/CountryLay"
                                    android:layout_alignBottom="@+id/CountryLay"
                                    android:layout_marginTop="0dp"
                                    android:padding="0dp"
                                    android:src="@drawable/down_arrow"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="15dp"
                                    android:clickable="false"
                                    android:focusable="false"/>
                            </RelativeLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textColorHint="@color/textColor"
                                android:theme="@style/TextLabel">
                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/model_height"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:hint="@string/height"
                                    android:textSize="14sp"
                                    android:imeOptions="actionDone"
                                    android:textColor="@color/textColorBright"
                                    android:maxLength="10"/>
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:textColorHint="@color/textColor"
                                android:theme="@style/TextLabel">
                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/model_width"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:hint="@string/width"
                                    android:textSize="14sp"
                                    android:imeOptions="actionDone"
                                    android:textColor="@color/textColorBright"
                                    android:maxLength="10"/>
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:textColorHint="@color/textColor"
                                android:theme="@style/TextLabel">
                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/model_depth"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:hint="@string/depth"
                                    android:textSize="14sp"
                                    android:imeOptions="actionDone"
                                    android:textColor="@color/textColorBright"
                                    android:maxLength="75"/>
                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

                <EditText android:id="@+id/input_unit_hidden"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:inputType="text"/>
                <EditText android:id="@+id/input_unit_scale_hidden"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:inputType="text"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.75"
                android:padding="7dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:textColor="@color/textColor"
                    android:background="@drawable/dmd_button_style"
                    android:text="@string/submit"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

