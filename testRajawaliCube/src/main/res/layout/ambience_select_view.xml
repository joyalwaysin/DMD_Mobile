<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select_shape_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/living_room_01"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:background="@drawable/living_room_01" />

        <Button
            android:id="@+id/living_room_02"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/living_room_02" />

        <Button
            android:id="@+id/exterior_01"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/exterior_01" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <Button
            android:id="@+id/bathroom_01"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:background="@drawable/bathroom_01" />

        <Button
            android:id="@+id/kitchen_01"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/kitchen_01" />

        <Button
            android:id="@+id/bedroom_01"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bedroom_01" />
    </LinearLayout>

</LinearLayout>