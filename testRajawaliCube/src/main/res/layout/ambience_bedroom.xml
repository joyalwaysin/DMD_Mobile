<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.scrollviewperspective.MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.nagainfo.smartShowroom.ZoomableRelativeLayout
                android:id="@+id/viewV"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <!--
     android:layout_width="1259px"
                    android:layout_height="945px"
                -->

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bedroom" />

                <ImageView
                    android:id="@+id/imageWall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" />

                <ImageView
                    android:id="@+id/imageFloor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="195dp"
                    android:layout_marginTop="-100dp" />

                

            </com.nagainfo.smartShowroom.ZoomableRelativeLayout>
        </HorizontalScrollView>
    </ScrollView>

</RelativeLayout>