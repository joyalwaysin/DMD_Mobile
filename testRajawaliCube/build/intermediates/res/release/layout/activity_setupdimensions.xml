<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setup_dimensions_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/content_box"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="60dp"
        android:paddingRight="50dp"
        android:paddingTop="120dp" >

        <LinearLayout
            android:id="@+id/box_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.12"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/shapeContainer"
                android:layout_width="326dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageWall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rectangle_shape" />

                <TextView
                    android:id="@+id/selectedShapeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Rectangle/Square"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/box_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.19" >

            <LinearLayout
                android:id="@+id/box_right1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:paddingRight="25dp" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:text="Unit"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dimension A"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dimension B"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewblank1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/textViewDimesionC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dimesnion C"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewblank2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/textViewDimesionD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dimension D"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewblank3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wall Height"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:paddingLeft="10dp" >

                    <Spinner
                        android:id="@+id/unitSpinner"
                        android:layout_width="226dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textfield_bg"
                        android:paddingLeft="20dp" />

                    <EditText
                        android:id="@+id/dimenA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textfield_bg"
                        android:hint="Enter dimension"
                        android:inputType="phone"
                        android:paddingLeft="20dp" >

                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@+id/dimenB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textfield_bg"
                        android:hint="Enter dimension"
                        android:inputType="phone"
                        android:paddingLeft="20dp" />

                    <EditText
                        android:id="@+id/dimenC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textfield_bg"
                        android:hint="Enter dimension"
                        android:inputType="phone"
                        android:paddingLeft="20dp" />

                    <EditText
                        android:id="@+id/dimenD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textfield_bg"
                        android:hint="Enter dimension"
                        android:inputType="phone"
                        android:paddingLeft="20dp" />

                    <EditText
                        android:id="@+id/wallHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textfield_bg"
                        android:hint="Enter dimension"
                        android:inputType="phone"
                        android:paddingLeft="20dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:paddingLeft="65dp"
        android:paddingTop="10dp" >

        <Button
            android:id="@+id/button1"
            android:layout_width="307dp"
            android:layout_height="70dp"
            android:background="@drawable/home_button"
            android:onClick="homePressed" />

        <Button
            android:id="@+id/button2"
            android:layout_width="307dp"
            android:layout_height="70dp"
            android:background="@drawable/next_button"
            android:onClick="nextPressed" />
    </LinearLayout>

</LinearLayout><!-- From: file:/home/neeraj/StudioProjects/testRajawaliCube/testRajawaliCube/src/main/res/layout/activity_setupdimensions.xml -->